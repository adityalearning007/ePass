@model IEnumerable<ePass.Passenger>

@{
    ViewBag.Title = "AdminDashboard";
}

<h2>Dashboard</h2>


<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email Id
        </th>
        <th>
            Source
        </th>
        <th>
            Destination
        </th>
        <th>
            Date of Travel
        </th>
        <th>
            Adhar Card
        </th>
        <th hidden>
            @*@Html.DisplayNameFor(model => model.CreatedDt)*@
        </th>
        <th>
            Current Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourcePlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationPlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfTravel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdharCard)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.CreatedDt)
            </td>
            <td>
                <div>
                    @Html.DisplayFor(modelItem => item.Status)
                </div>

            </td>
            @if (item.Status == "Pending")
            {
                <td>
                    <a href="@Url.Action("updatePassengerStatus","Home",new {Status="Approved",Id=item.Id })" class="btn btn-success">Approve</a> &nbsp;
                    <a href="@Url.Action("updatePassengerStatus","Home",new {Status="Rejected",Id=item.Id })" class="btn btn-danger">Reject</a>
                </td>

            }

        </tr>
    }

</table>
